<UserControl x:Class="Fizzi.Applications.ChallongeVisualization.View.MatchDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:lview="clr-namespace:Fizzi.Applications.ChallongeVisualization.View"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             IsHitTestVisible="True">
    <UserControl.Resources>
        <CollectionViewSource x:Key="Matches" Source="{Binding Context.Tournament.Matches}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Value.Player1.IsAssignedToStation" Direction="Descending" />
                <scm:SortDescription PropertyName="Value.RoundOrder" Direction="Ascending" />
                <scm:SortDescription PropertyName="Value.IsWinners" Direction="Ascending" />
                <scm:SortDescription PropertyName="Value.Identifier" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        
        <lview:ProgressToSizeConverter x:Key="ProgressToSizeConv" />
        <lview:TimeSpanToShortStringConverter x:Key="TimeSpanToShortStringConv" />
        <lview:TimeSpanToBrushConverter x:Key="TimeSpanToBrushConv" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="12">
            <Grid Grid.IsSharedSizeScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header Rows -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Margin="3" Background="CornflowerBlue">
                            <TextBlock Margin="6" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="{Binding Context.Tournament.Name}" />
                        </Border>

                        <Button Grid.Column="1" Margin="3" Cursor="Hand" Click="TOButton_Click">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="CornflowerBlue">
                                        <TextBlock Margin="6" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="TO" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Grid.Column="2" Margin="3" Cursor="Hand" Command="{Binding Back}" Click="BackButton_Click">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="CornflowerBlue">
                                        <TextBlock Margin="6" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Back" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Round" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Code" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Station" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Timer" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ScrollBar" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Round" />
                        </Border>

                        <Border Grid.Column="1" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Code" />
                        </Border>

                        <Border Grid.Column="2" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Player 1" />
                        </Border>

                        <Border Grid.Column="3" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Player 2" />
                        </Border>

                        <Border Grid.Column="4" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Station" />
                        </Border>
                        
                        <Border Grid.Column="5" Margin="3" Background="DimGray">
                            <TextBlock Margin="6" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="Timer" />
                        </Border>
                    </Grid>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" FocusVisualStyle="{x:Null}">
                    <ScrollViewer.Template>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ScrollBar" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ScrollContentPresenter Grid.Column="0" Grid.Row="0" Name="PART_ScrollContentPresenter" />
                                <ScrollBar Orientation="Vertical" Grid.Column="1" Grid.Row="0" Name="PART_VerticalScrollBar" Value="{TemplateBinding VerticalOffset}"
                                           Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" ViewportSize="{TemplateBinding ViewportHeight}" 
                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}">
                                    <ScrollBar.Template>
                                        <ControlTemplate TargetType="ScrollBar">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition MaxHeight="0" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition MaxHeight="0" />
                                                </Grid.RowDefinitions>
                                                <Border Grid.RowSpan="3" CornerRadius="5" Background="CornflowerBlue" />
                                                <Track Name="PART_Track" Grid.Row="1" IsDirectionReversed="True">
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Border Margin="3" CornerRadius="4" Background="WhiteSmoke" Cursor="Hand" />
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                                <!--<Border Margin="3" CornerRadius="5" Background="Blue" Name=""-->
                                            </Grid>
                                        </ControlTemplate>
                                    </ScrollBar.Template>
                                </ScrollBar>
                            </Grid>
                        </ControlTemplate>
                    </ScrollViewer.Template>
                    <ItemsControl ItemsSource="{Binding Source={StaticResource Matches}}" FocusVisualStyle="{x:Null}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid DataContext="{Binding Value}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="complete">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PlayerCount}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Round" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Code" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Station" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Timer" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Margin="3" Background="SlateBlue">
                                        <TextBlock Margin="6" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="{Binding RoundName}" />
                                    </Border>

                                    <Border Grid.Column="1" Margin="3" Background="SlateBlue">
                                        <TextBlock Margin="6" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="{Binding Identifier}" />
                                    </Border>

                                    <CheckBox Grid.Column="2" Margin="3" IsChecked="{Binding Player1.IsMissing}" FocusVisualStyle="{x:Null}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="IsEnabled" Value="False" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlayerCount}" Value="2">
                                                        <Setter Property="IsEnabled" Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Border>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Cursor" Value="Hand" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Player1.IsMissing}" Value="False">
                                                                    <Setter Property="Background" Value="SlateBlue" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Player1.IsMissing}" Value="True">
                                                                    <Setter Property="Background" Value="#E02020" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}" Value="False">
                                                                    <Setter Property="Cursor" Value="Arrow" />
                                                                    <Setter Property="Background" Value="Gray" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <DockPanel>
                                                        <TextBlock DockPanel.Dock="Right" Margin="6" IsHitTestVisible="False" FontSize="18" FontWeight="Bold" 
                                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                   Text="{Binding Player1.TimeSinceMissing, Converter={StaticResource TimeSpanToShortStringConv}}" />
                                                        <TextBlock Margin="6" IsHitTestVisible="False" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="White" />
                                                                    <Setter Property="FontWeight" Value="Bold" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Player1Id}" Value="{x:Null}">
                                                                            <Setter Property="Foreground" Value="LightGray" />
                                                                            <!--<Setter Property="FontWeight" Value="Normal" />-->
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <TextBlock.Text>
                                                                <PriorityBinding>
                                                                    <Binding Path="Player1.Name" />
                                                                    <Binding Path="Player1SourceString" />
                                                                </PriorityBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DockPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>

                                    <CheckBox Grid.Column="3" Margin="3" IsChecked="{Binding Player2.IsMissing}" FocusVisualStyle="{x:Null}">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="IsEnabled" Value="False" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlayerCount}" Value="2">
                                                        <Setter Property="IsEnabled" Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </CheckBox.Style>
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Border>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Cursor" Value="Hand" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Player2.IsMissing}" Value="False">
                                                                    <Setter Property="Background" Value="SlateBlue" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Player2.IsMissing}" Value="True">
                                                                    <Setter Property="Background" Value="#E02020" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}" Value="False">
                                                                    <Setter Property="Cursor" Value="Arrow" />
                                                                    <Setter Property="Background" Value="Gray" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <DockPanel>
                                                        <TextBlock DockPanel.Dock="Left" Margin="6" IsHitTestVisible="False" FontSize="18" FontWeight="Bold" 
                                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                   Text="{Binding Player2.TimeSinceMissing, Converter={StaticResource TimeSpanToShortStringConv}}" />
                                                        <TextBlock Margin="6" IsHitTestVisible="False" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="White" />
                                                                    <Setter Property="FontWeight" Value="Bold" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Player2Id}" Value="{x:Null}">
                                                                            <Setter Property="Foreground" Value="LightGray" />
                                                                            <!--<Setter Property="FontWeight" Value="Normal" />-->
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                            <TextBlock.Text>
                                                                <PriorityBinding>
                                                                    <Binding Path="Player2.Name" />
                                                                    <Binding Path="Player2SourceString" />
                                                                </PriorityBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DockPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>

                                    <Border Grid.Column="4" Margin="3">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Gray" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Player1.IsAssignedToStation}" Value="True">
                                                        <Setter Property="Background" Value="SlateBlue" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Margin="6" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text="{Binding Player1.StationAssignment}" />
                                    </Border>
                                    
                                    <Border Grid.Column="5" Margin="3" Background="{Binding TimeSinceAvailable, Converter={StaticResource TimeSpanToBrushConv}}">
                                        <TextBlock Margin="6" IsHitTestVisible="False" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"
                                                   Text="{Binding TimeSinceAvailable, Converter={StaticResource TimeSpanToShortStringConv}}" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <ProgressBar Grid.Row="2" Minimum="0" Maximum="100" Value="{Binding Context.Tournament.ProgressMeter, Mode=OneWay}">
                    <ProgressBar.Template>
                        <ControlTemplate>
                            <Border Margin="3">
                                <Border.Background>
                                    <DrawingBrush TileMode="None" Stretch="Fill">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <GeometryDrawing Brush="Gray">
                                                    <GeometryDrawing.Geometry>
                                                        <RectangleGeometry Rect="0,0,1,1" />
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                                <GeometryDrawing Brush="#50C050">
                                                    <GeometryDrawing.Geometry>
                                                        <MultiBinding Converter="{StaticResource ProgressToSizeConv}">
                                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Value" />
                                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Minimum" />
                                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Maximum" />
                                                        </MultiBinding>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Border.Background>
                                <TextBlock Margin="6" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" 
                                           Text="{Binding Context.Tournament.ProgressMeter, Mode=OneWay, StringFormat={}{0}% Complete}" />
                            </Border>
                        </ControlTemplate>
                    </ProgressBar.Template>
                </ProgressBar>
            </Grid>
        </Border>

        <TextBlock Grid.Row="1" Margin="12,0,12,12" TextWrapping="Wrap" FontSize="18" Foreground="Red" Text="{Binding Context.ErrorMessage}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Context.IsError}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
